<%- include('./partials/header') %>
<form  onsubmit="(event)=>{event.preventDefault()}">
    <div class="field">
        <label class="label">Name</label>
        <div class="control">
          <input id="movieName" class="input" type="text" name="name" placeholder="Movie name">
        </div>
    </div>

    <div class="field">
        <label class="label">Director</label>
        <div class="control">
          <input id="movieDirector" class="input" type="text"  name="director" placeholder="Movie director">
        </div>
    </div>
    
    <div id="clasification-dropdown" class="dropdown ">
        <div class="dropdown-trigger">
          <button class="button" aria-haspopup="true" type="button" aria-controls="dropdown-menu">
            <span id="clasification-selection">Choose a clasification</span>
            <span class="icon is-small">
              <i class="fas fa-angle-down" aria-hidden="true"></i>
            </span>
          </button>
        </div>
        <div class="dropdown-menu" id="dropdown-menu" role="menu">
          <div class="dropdown-content">
            <% clasifications.forEach((clasification)=>{  %>
                <a href="#" class="dropdown-item" data-name=<%=clasification.name%> data-id=<%=clasification._id%>>
                    <%=clasification.name%>
                </a>
            <%})%>
          </div>
        </div>
      </div>
      <button id="createMovieBtn" type="submit" class="button is-primary">Create</button>
</form>

<%- include('./partials/footer') %>